<!DOCTYPE html>
<html{% if site.language %} lang="{{ site.language }}"{% endif %}>
  <head>
    <meta charset="utf-8">
    {%- if site.description %}
    <meta name="description" content="{{ site.description }}">
    {%- endif %}
    {%- if site.author %}
    <meta name="author" content="{{ site.author }}">
    {%- endif %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {%- if site.language %}
    <meta http-equiv="content-language" content="{{ site.language }}">
    {%- endif %}
    <title>{{ (meta.page_title | default(meta.title)) | default(site.name) }}</title>
  </head>
  <body>
    <main>
    {% if meta.title %}<h1>{{ meta.title }}</h1>{%- endif %}
    {{ content }}
    </main>
  </body>
</html>
